<log4net>
  <appender name="AuditFileAppender" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <file value="D:\Template\Template.Microservices\Log\" />
    <datePattern value="yyyy-MM-dd.'audit.txt'" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <maxSizeRollBackups value="180" />
    <maximumFileSize value="15MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %message %newline" />
    </layout>
  </appender>
  <logger additivity="false" name="AuditFileAppender">
    <level value="ALL" />
    <appender-ref ref="AuditFileAppender" />
  </logger>
</log4net>