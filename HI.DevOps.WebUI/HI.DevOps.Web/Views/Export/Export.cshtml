@using HI.DevOps.DomainCore.Models.Export
@model HI.DevOps.DomainCore.Models.Export.ExportQueryViewModel
<script type="text/javascript">
    $(function () {
        onExportLoad();
    });
</script>
@{
    var queryModel = Model;
    if (queryModel == null)
    {
        throw new ArgumentNullException(nameof(queryModel));
    }
    <div class="row" style="margin-top: 12px;">
        <div class="col-lg-12 col-12 layout-spacing">
            <div class="statbox widget box ">
              
                <div class="row" style="margin-top: 20px">

                    <div class="col-md-12 col-12">
                        <form action="javascript:void(0);" class="form-horizontal mt-md-0 mt-3 text-md-right text-center">
                            <button id="exportBtn" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="7 10 12 15 17 10"></polyline>
                                    <line x1="12" y1="15" x2="12" y2="3"></line>
                                </svg> Export TimeSheet
                            </button>
                        </form>
                    </div>

                    <div class="col-md-1  mb-1 mr-1 text-md-left text-center">
                        <label id="removeButton">
                            Remove
                        </label>
                    </div>
                    
                    <div class="mb-1 mr-1 text-md-left text-center" style="margin-left: -10px;">
                        <label class="label">
                            <div class="toggle">
                                <input class="toggle-state" type="checkbox" name="check" id="isQueryGrouped" onchange="onQueryGroupChange(this)"/>
                                <div class="indicator"></div>
                            </div>
                            <div class="label-text">Group</div>
                        </label>
                    </div>
                    <div class="col-md-2  mb-1 mr-1 text-md-left text-center">
                        <label id="logicLabel">
                            And/Or
                        </label>
                    </div>
                    <div class="col-md-3  mb-1 mr-1 text-md-left text-center">
                        <label id="fieldLabel">
                            Field*
                        </label>
                    </div>
                    <div class="col-md-2  mb-1 mr-1 text-md-left text-center">
                        <label id="operatorLabel">
                            Operator
                        </label>

                    </div>
                    <div class="col-md-3  mb-1 mr-1 text-md-left text-center">
                        <label id="valueLabel">
                            Value
                        </label>
                    </div>
                </div>
                <div id="queryDiv">
                    @{

                        await Html.RenderPartialAsync("~/Views/Export/QueryControl.cshtml", queryModel);
                    }
                </div>
                <br />
                <section class="centered-container">
                    <a class="link link--arrowed" href="javascript:void(0)" onclick="addQueryControl();">
                        Add new clause
                        <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                            <g fill="none" stroke="#2175FF" stroke-width="1.5" stroke-linejoin="round" stroke-miterlimit="10">
                                <circle class="arrow-icon--circle" cx="16" cy="16" r="15.12"></circle>
                                <path class="arrow-icon--arrow" d="M16.14 9.93L22.21 16l-6.07 6.07M8.23 16h13.98"></path>
                            </g>
                        </svg>
                    </a>
                </section>
            </div>
        </div>
    </div>
}